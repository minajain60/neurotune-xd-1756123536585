<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:layout="sap.ui.layout"
          xmlns:form="sap.ui.layout.form"
          xmlns:core="sap.ui.core"
          controllerName="converted.purchaseorderdetailsview.controller.PurchaseOrderDetailsView"
          displayBlock="true"
          height="100%"
          xmlns:commons="sap.ui.commons">
  <Page title="Purchase Order Details" showNavButton="true" navButtonPress="onActionBack">
    <customHeader>
      <Bar>
        <contentLeft>
          <Button icon="sap-icon://save" tooltip="Save" press="onActionSave"/>
          <Select id="saveDropdown" width="100px" selectedKey="{header>/SaveOption}" change="onSelectSaveOption">
            <core:Item key="Option1" text="Option 1"/>
            <core:Item key="Option2" text="Option 2"/>
          </Select>
          <Button text="Document Overview On" icon="sap-icon://document" press="onActionDocumentOverview" tooltip="Document Overview"/>
          <Button icon="sap-icon://attachment" press="onActionDocumentIcon" tooltip="Display Document"/>
          <Button icon="sap-icon://edit" press="onActionEdit" tooltip="Edit"/>
          <Button icon="sap-icon://excel-attachment" press="onActionExport" tooltip="Export"/>
          <Button text="Print Preview" icon="sap-icon://print" press="onActionPrintPreview" tooltip="Print Preview"/>
          <Button text="Messages" icon="sap-icon://message-success" press="onActionMessages" tooltip="Messages"/>
          <Button icon="sap-icon://hint" press="onActionInfo" tooltip="Information"/>
          <Button text="Personal Setting" icon="sap-icon://action-settings" press="onActionPersonalSetting" tooltip="Personal Setting"/>
          <Button text="Cancel" press="onActionCancel" tooltip="Cancel"/>
        </contentLeft>
      </Bar>
    </customHeader>
    <content>
      <layout:Grid defaultSpan="XL12 L12 M12 S12" width="100%">
        <layout:content>
          <layout:Grid defaultSpan="XL3 L3 M6 S12">
            <Image id="cartIcon" src="sap-icon://cart" width="16px" height="16px" tooltip="Purchase Order"/>
            <Label text="Standard PO" design="Bold"/>
            <Select id="poTypeDropdown" width="150px" selectedKey="{header>/PoTypeKey}" change="onSelectPoType">
              <core:Item key="Type1" text="Type 1"/>
              <core:Item key="Type 2" text="Type 2"/>
            </Select>
            <Input id="poNumberField" value="{header>/PoNumber}" width="100px" editable="false"/>
            <Label text="Vendor" design="Bold"/>
            <Input id="vendorField" value="{header>/VendorName}" width="200px" editable="false"/>
            <Label text="Doc. date" design="Bold"/>
            <Input id="docDateField" value="{header>/DocumentDate}" width="100px" editable="false"/>
          </layout:Grid>
          <IconTabBar id="detailsTabStrip" expandable="false" expanded="true" selectedKey="deliveryInvoiceTab" select="onSelectTab" width="100%">
            <items>
              <IconTabFilter id="deliveryInvoiceTab" text="Delivery/Invoice" key="deliveryInvoiceTab">
                <content>
                  <layout:Grid defaultSpan="XL6 L6 M12 S12" hSpacing="1">
                    <form:SimpleForm id="paymentTermsForm" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                      <form:content>
                        <Label text="Payment Terms"/>
                        <layout:HorizontalLayout>
                          <Input id="paymentTermsKey" value="{deliveryInvoice>/PaymentTermsKey}" width="50px"/>
                          <Button id="paymentTermsSearch" icon="sap-icon://search" tooltip="Search Payment Terms" press="onActionSearchPaymentTerms"/>
                        </layout:HorizontalLayout>
                        <Label text="Payment in"/>
                        <layout:HorizontalLayout>
                          <Input id="paymentDays1" value="{deliveryInvoice>/PaymentDays1}" width="40px" type="Number"/>
                          <Text text="days" width="30px"/>
                          <Input id="paymentDiscount1" value="{deliveryInvoice>/PaymentDiscount1}" width="50px" type="Number"/>
                          <Text text="%" width="10px"/>
                        </layout:HorizontalLayout>
                        <Label text="Payment in"/>
                        <layout:HorizontalLayout>
                          <Input id="paymentDays2" value="{deliveryInvoice>/PaymentDays2}" width="40px" type="Number"/>
                          <Text text="days" width="30px"/>
                          <Input id="paymentDiscount2" value="{deliveryInvoice>/PaymentDiscount2}" width="50px" type="Number"/>
                          <Text text="%" width="10px"/>
                        </layout:HorizontalLayout>
                        <Label text="Payment in"/>
                        <layout:HorizontalLayout>
                          <Input id="paymentDays3" value="{deliveryInvoice>/PaymentDays3}" width="40px" type="Number"/>
                          <Text text="days net" width="50px"/>
                        </layout:HorizontalLayout>
                        <Label text="Incoterms"/>
                        <layout:HorizontalLayout>
                          <Input id="incotermsCode" value="{deliveryInvoice>/IncotermsCode}" width="50px"/>
                          <Input id="incotermsLocation" value="{deliveryInvoice>/IncotermsLocation}" width="150px"/>
                        </layout:HorizontalLayout>
                      </form:content>
                    </form:SimpleForm>
                  </layout:Grid>
                  <layout:Grid defaultSpan="XL6 L6 M12 S12" hSpacing="1">
                    <form:SimpleForm id="currencyForm" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                      <form:content>
                        <Label text="Currency"/>
                        <Input id="currencyValue" value="{deliveryInvoice>/Currency}" width="60px" editable="false"/>
                        <Label text="Exchange Rate"/>
                        <layout:HorizontalLayout>
                          <Input id="exchangeRateValue" value="{deliveryInvoice>/ExchangeRate}" width="80px" type="Number"/>
                          <CheckBox id="exchRateFixed" text="Exch.Rate Fixed" selected="{deliveryInvoice>/ExchangeRateFixed}" select="onToggleExchangeRateFixed"/>
                        </layout:HorizontalLayout>
                      </form:content>
                    </form:SimpleForm>
                  </layout:Grid>
                  <CheckBox id="grMessageCheckbox" text="GR Message" selected="{deliveryInvoice>/GRMessage}" select="onToggleGRMessage"/>
                </content>
              </IconTabFilter>
              <IconTabFilter id="conditionsTab" text="Conditions" key="conditionsTab"/>
              <IconTabFilter id="textsTab" text="Texts" key="textsTab"/>
              <IconTabFilter id="addressTab" text="Address" key="addressTab"/>
              <IconTabFilter id="communicationTab" text="Communication" key="communicationTab"/>
              <IconTabFilter id="partnersTab" text="Partners" key="partnersTab"/>
              <IconTabFilter id="additionalDataTab" text="Additional Data" key="additionalDataTab"/>
              <IconTabFilter id="orgDataTab" text="Org. Data" key="orgDataTab"/>
              <IconTabFilter id="statusTab" text="Status" key="statusTab"/>
            </items>
          </IconTabBar>
        </layout:content>
      </layout:Grid>
    </content>
  </Page>
</mvc:View>